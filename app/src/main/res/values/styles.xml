<resources>
    <style name="App.TabTextAppearance" parent="TextAppearance.Material3.LabelLarge">
        <item name="textAllCaps">false</item>
    </style>

    <style name="App.TabLayout.Dialog" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/App.TabTextAppearance</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="tabRippleColor">?attr/colorPrimaryContainer</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
    </style>
</resources>
