<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_support"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Settings illustration image (PNG) -->
            <ImageView
                android:id="@+id/settings_illustration"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:contentDescription="@string/settings_image_desc"
                android:src="@drawable/power_colored_dark"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                tools:ignore="ContentDescription" />

            <!-- API health block -->
            <LinearLayout
                android:id="@+id/healthContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <View
                    android:id="@+id/healthBeacon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/beacon_red" />

                <TextView
                    android:id="@+id/healthStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/api_unknown"
                    tools:text="@string/api_ok"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />
            </LinearLayout>

            <!-- Theme row as a card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/theme_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/theme_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pref_theme_title"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/theme_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pref_theme_summary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Default view row as a card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/default_view_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/default_view_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_default_view_title"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/default_view_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_default_view_summary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Notifications lead time row as a card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/notifications_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/notifications_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_notifications_title"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/notifications_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Надсилати сповіщення за 5 хв до початку" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Manage links row as a card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/manage_links_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/manage_links_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/manage_links_title"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/manage_links_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/manage_links_summary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Manage hidden subjects row as a card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/manage_hidden_subjects_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/manage_hidden_subjects_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/manage_hidden_subjects_title"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/manage_hidden_subjects_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/manage_hidden_subjects_summary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logging row as a card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logs_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/logs_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/logs_row_title"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/logs_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/logs_row_summary"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Big gold Support button above the Clear Data button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_support"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/support"
        app:backgroundTint="@color/gold"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_clear_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Clear data button anchored at the bottom of the page -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_clear_data"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/settings_clear_all"
        app:backgroundTint="?attr/colorErrorContainer"
        android:textColor="?attr/colorOnErrorContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
