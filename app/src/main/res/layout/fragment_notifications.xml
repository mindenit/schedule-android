<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settings_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_category_appearance"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:id="@+id/theme_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/theme_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pref_theme_title"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/theme_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pref_theme_summary"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/default_view_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/default_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_default_view_title"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/default_view_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_default_view_summary"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
