<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- Weekday header -->
    <LinearLayout
        android:id="@+id/weekday_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/calendar_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weekday_mon_short"
            android:textColor="@color/calendar_on_background"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weekday_tue_short"
            android:textColor="@color/calendar_on_background"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weekday_wed_short"
            android:textColor="@color/calendar_on_background"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weekday_thu_short"
            android:textColor="@color/calendar_on_background"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weekday_fri_short"
            android:textColor="@color/calendar_on_background"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weekday_sat_short"
            android:textColor="@color/calendar_on_background"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weekday_sun_short"
            android:textColor="@color/calendar_on_background"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />
    </LinearLayout>

    <!-- New high-performance CalendarView for month mode -->
    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/calendar_background"
        app:cv_dayViewResource="@layout/item_calendar_day"
        app:cv_daySize="rectangle"
        app:cv_outDateStyle="endOfGrid"
        app:layout_constraintTop_toBottomOf="@id/weekday_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Month pager kept for reference but no longer used -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/calendar_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/calendar_background"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/weekday_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Week pager for interactive swiping between weeks (hidden by default) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/week_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/calendar_background"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Day pager for interactive swiping between days (hidden by default) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/day_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/calendar_background"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Enhanced loading state with better visual design -->
    <LinearLayout
        android:id="@+id/loading_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp"
        android:visibility="gone"
        android:background="?attr/colorSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Enhanced progress indicator with custom styling -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading_indicator"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:indeterminate="true"
            app:indicatorColor="?attr/colorPrimary"
            app:trackColor="?attr/colorSurfaceVariant"
            app:trackThickness="3dp"
            app:indicatorSize="56dp" />

        <!-- Loading text with better typography -->
        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/loading_calendar"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:alpha="0.87" />

        <!-- Optional subtle loading hint -->
        <TextView
            android:id="@+id/loading_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/loading_calendar_hint"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:alpha="0.6"
            android:gravity="center" />

    </LinearLayout>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/empty_icon_container"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_illustration_circle">

            <ImageView
                android:id="@+id/empty_icon"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                app:tint="?attr/colorOnSecondaryContainer"
                android:src="@drawable/ic_sentiment_dissatisfied_24" />
        </FrameLayout>

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:text="@string/calendar_empty_state" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/empty_action"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/select_schedule" />
    </LinearLayout>

    <!-- Floating action button: jump to today/current period -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/title_home"
        app:srcCompat="@drawable/ic_calendar_today_24"
        app:tint="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>